{
  "compilerOptions": {
    "target": "esNext",
    "lib": ["esNext"],
    "module": "commonjs",
    "isolatedModules": true,
    "outDir": "dist",
    "noEmit": false,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["./server/**/*"],
  "ts-node": {
    "transpileOnly": true
  }
}